<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.AdminSubmittedPage"
             Title="AdminSubmittedPage">
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
>
        <Label 
    Text="Submitted Lost Item"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />

        <Label 
    Text="Category:"/>
        <Entry
    x:Name="CategoryInput"
    Background="AntiqueWhite"/>

        <Label
    Text="Description:"/>
        <Entry
    x:Name="DescriptionInput"
     Background="AntiqueWhite"/>

        <Label
    Text="Image (optional):"/>
        <Button 
    Text="Upload Image"
    x:Name="ImageInput"
   />

        <Label
    Text="Location Lost:"/>
        <Entry/>

        <Label
    Text="Date and Time Lost:"/>
        <TimePicker
    
    x:Name="DateTimeInput"/>
        <Entry
    x:Name="LocationInput"
     Background="AntiqueWhite"/>

        <Label
    Text="Student Number:"/>
        <Entry
    x:Name="StudNumberInput"
     Background="AntiqueWhite"/>

        <Button
    Text="Report Item"
    />


    </VerticalStackLayout>
</ContentPage>