<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.StudentDashboard"
             Title="StudentDashboard"
           
            >
    <ScrollView>
        <VerticalStackLayout>

            <Label 
        Text="ReClaimIt!" 
        FontSize="Header" 
        FontAttributes="100"
        Style="{StaticResource Headline}"
        Margin="15"

        />

            <Button  

        WidthRequest="80" 
        HeightRequest="80"
        CornerRadius="70"  
        x:Name="ReportBtn"
        SemanticProperties.Hint="Counts the number you clicked"
        Margin="15" 
        HorizontalOptions="Start"
        Clicked="ReportBtn_Clicked"
        />

            <Button 

        WidthRequest="80"
        HeightRequest="80"
        CornerRadius="70"
        x:Name="ClaimBtn"
        SemanticProperties.Hint="Counts the number you clicked"
        Margin=" 15"
        HorizontalOptions="Start"
        Clicked="ClaimBtn_Clicked"
        />
            <Button

        WidthRequest="80"
        HeightRequest="80"
        CornerRadius="70"
        x:Name="NotificationBtn"
        SemanticProperties.Hint="Count the number you clicked"
        Margin="15"
        HorizontalOptions="Start"
        Clicked="NotificationBtn_Clicked" 
        />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>