<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.StudentDashboard"
             Title="StudentDashboard"
           
            >
    <ScrollView>
        <VerticalStackLayout>

            <Label 
        Text="ReClaimIt!" 
        FontSize="Header" 
        FontAttributes="Bold"
        Style="{StaticResource Headline}"
        Margin="15"

        />

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="40"
                Margin="20"
                
                >
                <Button  
                    Text="Report"
                    WidthRequest="80" 
                    HeightRequest="80"
                    CornerRadius="70"  
                    x:Name="ReportBtn"
                    SemanticProperties.Hint="Counts the number you clicked"
                    Margin="15" 
                    HorizontalOptions="Start"
                    Clicked="ReportBtn_Clicked"
                    />

                <Button 
                    Text="Claim"
                    WidthRequest="80"
                    HeightRequest="80"
                    CornerRadius="70"
                    x:Name="ClaimBtn"
                    SemanticProperties.Hint="Counts the number you clicked"
                    Margin=" 15"
                    HorizontalOptions="Start"
                    Clicked="ClaimBtn_Clicked"
                    />
                
                <!--CRTRL K + CTRL C TO COMMENT, CTRL K + CTL U TO UNCOMMENT-->
                <!--<Button
                    
                    WidthRequest="80"
                    HeightRequest="80"
                    CornerRadius="70"
                    x:Name="NotificationBtn"
                    SemanticProperties.Hint="Count the number you clicked"
                    Margin="15"
                    HorizontalOptions="Start"
                    Clicked="NotificationBtn_Clicked" 
                    />-->      

            </HorizontalStackLayout>
            <!-- THIS IS FOR NOTIFICATION LOG!!-->
            <CollectionView ItemsSource="{Binding Monkeys}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="2"
                       Source="{Binding ImageUrl}"
                       Aspect="AspectFill"
                       HeightRequest="60"
                       WidthRequest="60" />
                            <Label Grid.Column="1"
                       Text="{Binding Name}"
                       FontAttributes="Bold" />
                            <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="{Binding Location}"
                       FontAttributes="Italic"
                       VerticalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>