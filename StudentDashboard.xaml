<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.StudentDashboard"
             Title="StudentDashboard"
           
            >
    <ScrollView>
        <VerticalStackLayout>

            <Label 
        Text="ReClaimIt!" 
        FontSize="Header" 
        FontAttributes="Bold"
        Style="{StaticResource Headline}"
        Margin="15"

        />

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="40"
                Margin="20"
                
                >
                <Button  
                    Text="Report"
                    WidthRequest="80" 
                    HeightRequest="80"
                    CornerRadius="70"  
                    x:Name="ReportBtn"
                    SemanticProperties.Hint="Counts the number you clicked"
                    Margin="15" 
                    HorizontalOptions="Start"
                    Clicked="ReportBtn_Clicked"
                    />

                <Button 
                    Text="Claim"
                    WidthRequest="80"
                    HeightRequest="80"
                    CornerRadius="70"
                    x:Name="ClaimBtn"
                    SemanticProperties.Hint="Counts the number you clicked"
                    Margin=" 15"
                    HorizontalOptions="Start"
                    Clicked="ClaimBtn_Clicked"
                    />
                
                <!--CRTRL K + CTRL C TO COMMENT, CTRL K + CTL U TO UNCOMMENT-->
                <!--<Button
                    
                    WidthRequest="80"
                    HeightRequest="80"
                    CornerRadius="70"
                    x:Name="NotificationBtn"
                    SemanticProperties.Hint="Count the number you clicked"
                    Margin="15"
                    HorizontalOptions="Start"
                    Clicked="NotificationBtn_Clicked" 
                    />-->      

            </HorizontalStackLayout>
            <!-- THIS IS FOR NOTIFICATION LOG!!-->
            <CollectionView 
                SelectionMode="Single"
                x:Name="NotificationLog"
                ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="SeaGreen">
                            <HorizontalStackLayout>
                                <Label
                                    Text="{Binding Category}"/>
                                <Image
                                    />
                            </HorizontalStackLayout>
                        </Frame>
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                
                

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>