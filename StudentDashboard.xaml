<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.StudentDashboard"
              BackgroundColor="Azure"
             Title="StudentDashboard"
           
            >
    
    <VerticalStackLayout>
        
            <Label 
              Text="ReClaimIt!" 
               FontSize="Header" 
               FontAttributes="Bold"
               Style="{StaticResource Headline}"
                TextColor="Navy"
               Margin="15"
               />

        <Button  
          BackgroundColor="Black"
            WidthRequest="50" 
            HeightRequest="50"
            CornerRadius="40"  
            x:Name="ReportBtn"
            SemanticProperties.Hint="Counts the number you clicked"
            Margin="15" 
            HorizontalOptions="Start"
            Clicked="ReportBtn_Clicked"
            />

        <Button 
            BackgroundColor="Black"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="40"
            x:Name="ClaimBtn"
            SemanticProperties.Hint="Counts the number you clicked"
            Margin=" 15"
            HorizontalOptions="Start"
            Clicked="ClaimBtn_Clicked"
            />
        <Button
            BackgroundColor="Black"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="40"
            x:Name="NotificationBtn"
            SemanticProperties.Hint="Count the number you clicked"
            Margin="15"
            HorizontalOptions="Start"
            Clicked="NotificationBtn_Clicked" 
            />
    </VerticalStackLayout>
</ContentPage>